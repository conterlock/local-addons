<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="product_pricelist_extend_tree" model="ir.ui.view">
      <field name="name">Extencion de Vista Tarifas List</field>
      <field name="model">product.pricelist</field>
      <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
      <field name="arch" type="xml">
        <field name="name" position="after">
          <field name="security_groups" />
        </field>
      </field>
    </record>

    <record id="product_pricelist_extend_form" model="ir.ui.view">
      <field name="name">Extencion de Vista Tarifas Form</field>
      <field name="model">product.pricelist</field>
      <field name="inherit_id" ref="product.product_pricelist_view"/>
      <field name="arch" type="xml">
        <field name="country_group_ids" position="after">
          <field name="security_groups" />
        </field>
      </field>
    </record>
  </data>
</odoo>
